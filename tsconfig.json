{
  "compilerOptions": {
    "target": "es5",                               
    "module": "commonjs",                           
    "outDir": "./prod",                             
    "rootDir": "./src",                             
    "strict": true,                                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
